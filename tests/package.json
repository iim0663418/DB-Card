{
  "name": "db-card-tests",
  "version": "1.0.0",
  "description": "Test suite for DB-Card PWA security fixes and deployment compatibility",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:security": "jest tests/security",
    "test:smoke": "node tests/smoke/recursion-fix.test.js && node tests/smoke/deploy-02.test.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "puppeteer": "^21.0.0",
    "jsdom": "^22.1.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../pwa-card-storage/src/**/*.js",
      "../pwa-card-storage/*.js",
      "!../pwa-card-storage/node_modules/**",
      "!../pwa-card-storage/tests/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
  }
}