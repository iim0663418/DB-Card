{
  "name": "db-card-tests",
  "version": "3.1.4-language-architecture",
  "description": "Test suite for DB-Card unified language switching architecture",
  "scripts": {
    "test": "mocha 'tests/**/*.test.js' --timeout 10000 --recursive --require ./setup.js",
    "test:unit": "mocha 'tests/core/**/*.test.js' --timeout 5000 --require ./setup.js",
    "test:integration": "mocha 'tests/integration/**/*.test.js' --timeout 15000 --require ./setup.js",
    "test:e2e": "mocha 'tests/integration/**/*e2e*.test.js' --timeout 20000 --require ./setup.js",
    "test:security": "mocha 'tests/security/**/*.test.js' --timeout 10000 --require ./setup.js",
    "test:accessibility": "mocha 'tests/accessibility/**/*.test.js' --timeout 10000 --require ./setup.js",
    "test:coverage": "nyc --reporter=html --reporter=text mocha 'tests/**/*.test.js' --require ./setup.js",
    "test:watch": "mocha 'tests/**/*.test.js' --watch --timeout 10000 --require ./setup.js",
    "test:smoke": "mocha 'tests/smoke/**/*.test.js' --timeout 30000 --require ./setup.js",
    "lint": "eslint tests/**/*.js",
    "lint:fix": "eslint tests/**/*.js --fix"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "jsdom": "^23.0.1",
    "nyc": "^15.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-mocha": "^10.2.0"
  },
  "nyc": {
    "include": [
      "pwa-card-storage/src/**/*.js",
      "src/**/*.js"
    ],
    "exclude": [
      "tests/**/*.js",
      "node_modules/**",
      "coverage/**"
    ],
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "check-coverage": true,
    "lines": 90,
    "functions": 90,
    "branches": 85,
    "statements": 90
  },
  "mocha": {
    "timeout": 10000,
    "recursive": true,
    "reporter": "spec"
  }
}